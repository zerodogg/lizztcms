use warnings;
use strict;
use FindBin;
use Fatal qw(open close);
use lib $FindBin::RealBin.'/../lib/';

my $file = shift or die("Needs one parameter: the file to import from\n");
open(my $i,'<',$file);
$| = 1;
# LizztCMS doesn't like not being in its own dir when initializing
chdir($FindBin::RealBin.'/..');
require LizztCMS;

while(my $l = <$i>)
{
    chomp($l);
    print "Adding $l...";
    if(LizztCMS->model('LizztCMSDB::LzNewsletterSubscription')->search({ email => $l })->count)
    {
        print "already exists, skipping\n";
        next;
    }
    my $o = LizztCMS->model('LizztCMSDB::LzNewsletterSubscription')->create({
            email => $l,
            name => $l,
            format => 'html',
            send_every => 'month',
            validated => 1
        });
    LizztCMS->model('LizztCMSDB::LzNewsletterSubscriptionGroup')->create({
            group_id => 1,
            subscription_id => $o->subscription_id
        });
    print "done\n";
}
